{
  "name": "curso-cypress",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "generar-reporte": "cmd /c \"npx allure generate allure-results -o allure-report --clean\"",
    "abrir-reporte": "npx allure open \"allure-report\"",
    "ejecutar-pruebas": "cypress run --headed --env allure=true",
    "limpiar-reporte": "rimraf ./allure-report && rimraf ./allure-results",
    "test": "npm run limpiar-reporte && (npm run ejecutar-pruebas || true) && npm run generar-reporte && npm run abrir-reporte",
    "cy:parallel" : "npm run limpiar-reporte && cypress-parallel -s ejecutar-pruebas -t 2 -d ./cypress/e2e/test && npm run generar-reporte"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shelex/cypress-allure-plugin": "^2.41.1",
    "cypress-parallel": "^0.15.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "allure-commandline": "^2.34.0",
    "cypress": "^14.3.3"
  }
}
